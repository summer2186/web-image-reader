{
    "name": "Web图片浏览器",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": {
        "128": "main.png"
    },

    "permissions": [
      "activeTab",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "显示该页面所有图片"
    },
    "content_scripts": [
      {
        "matches": ["*://news.qq.com/a/*"],
        "js": ["js/tx-images-news.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["http://*/*"],
        "css": ["wir-main.css"],
        "js": ["js/other-web.js", "js/jquery-3.1.1.min.js"],
        "run_at": "document_end"
      }
    ]
}
